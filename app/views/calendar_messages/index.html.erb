<%= link_to "カレンダーへ", group_calendars_path(@calendar.group_id) %>
<br>
<br>
<%= form_with(model: @calendar_message, url: calendar_calendar_messages_path, local: true) do |form| %>
  <div class="field">
    <%= form.file_field :image %>
  </div>

  <div style="display:inline-flex">
    <div class="message">
      <%= form.text_area :message, placeholder: "メッセージを入力" %>
    </div>
    
    <div class="submit">
      <%= form.submit "送信" %>
    </div>
  </div>

<% end %>


<% @calendar_messages.each do |message| %>
  <% if message.user.id == current_user.id %>
    <div class="d-flex justify-content-end">
      <%= message.user.username %>:
      <%= message.message %>
      <%= image_tag message.image.to_s %>
      <%= message.created_at.to_s(:datetime) %>
      <%= link_to '削除', calendar_calendar_message_path(id: message.id), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    </div>
  <% else %> 
    <%= message.user.username %>:
    <%= message.message %>
    <%= image_tag message.image.to_s %>
    <%= message.created_at.to_s(:datetime) %>
  <% end %>
    <br>
<% end %>
