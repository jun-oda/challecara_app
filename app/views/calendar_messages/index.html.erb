<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Yomogi&display=swap" rel="stylesheet">
<body class = "message_page">
<div class="book">
<div class="diary">
<h2><%= @calendar.title %></h2><br>
<% @calendar_messages.each do |message| %>
  <% if message.user.id == current_user.id %>
    <%= message.user.username %>:
    <%= message.created_at.to_s(:datetime) %>
    <%= link_to '削除', calendar_calendar_message_path(id: message.id), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    <div class = "messages"> <%= simple_format(message.message) %> </div>
    <%= image_tag message.image.to_s %>
  <% else %> 
    <%= message.created_at.to_s(:datetime) %>
    <%= message.user.username %>:
    <div class = "messages"> <%= simple_format(message.message) %> </div>
    <%= image_tag message.image.to_s %>
  <% end %>
<% end %></div>
</div>


<%= render "calendar_messages/footer" %>

<table>

  <thead>
    <meta charset="utf-8">
    <link rel="stylesheet" href="members.scss" type="text/css">
  </thead>

  <tbody>
    <% @allmessages.each do |message| %>
      <tr>
        
        <td><%= message.message%></td>
        <td><%= link_to 'Destroy', destroy, data: { confirm: 'Are you sure?' } %></td>

      </tr>

    <% end %>
  </tbody>
</table>

  <div class="field">
    <%= form.file_field :image %>
  </div>


  <div class="message">
    <%= form.text_field :message, placeholder: "メッセージを入力" %>
  </div>
  
  <div class="submit">
    <%= form.submit "送信" %>
  </div>



<% end %>


