<h2><%= @group.name %></h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">時間</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
		<% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.title %></td>
        <td><%= calendar.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '編集', edit_calendar_path(calendar.id) %>
        <%= link_to '削除',calendar_path(calendar.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>	


<%= link_to 'イベント追加', new_group_calendar_path %>

<%= month_calendar events: @calendars do |date, calendars| %>
  <%= date.day %>

  <% calendars.each do |calendar| %>
    <div>
      <%= link_to calendar.title, edit_calendar_path(calendar.id) %>
    </div>
  <% end %>
<% end %>