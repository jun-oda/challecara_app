<%= form_with(model: @calendar, url: group_calendars_path, local: true) do |form| %>

  <div class="title">
    <%= form.label :イベント %>
    <%= form.text_field :title %>
  </div>

    <div class="time">
    <%= form.label :開始時間 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div style="display:inline-flex">
    <div class="content">
      <%= form.label :メモ %>
      <%= form.text_field :content %>
    </div>
    

    <div class="submit">
      <%= form.submit "保存" %>
    </div>
  </div>
<% end %>