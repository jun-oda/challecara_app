<br>

<h4>知り合いのグループかも？</h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">グループ名</th>
      <th scope="col">メンバー</th>
      <th scope="col">招待を送ったユーザー</th>
    </tr>
  </thead>
  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= link_to invite.group.name, invite_path(invite), method: :delete, data: { confirm: 'グループに参加しますか？' } %></td>
        <td><%= link_to image_tag('member.png', size:"32x32"), edit_group_path(invite.group.id) %>(<%= invite.group.users.count %>)</td>
        <td><%= invite.user.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>	    

<br><br>

<h2>グループ一覧</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">グループ名</th>
      <th scope="col">メンバー</th>
      <th scope="col">招待</th>
    </tr>
  </thead>
  <tbody>
  <% t = Time.new
     t.month
     t.day %>
		<% @groups.each do |group| %>
      <% if group.users.include?(current_user) %>
        <tr>
          <td><%= link_to group.name, group_path(group) %></td>
          <td><%= link_to image_tag('member.png', size:"32x32"), edit_group_path(group) %>(<%= group.users.count %>)</td>
          <td>
            <% @calendars.each do |calendar| %>
              <% if group.id == calendar.group_id  %>
                <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    開く
                  </button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <%= calendar.title %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to 'このグループに招待', new_invite_path(group_id: group) %></td>
        </tr>
      <% end %>  
		<% end %>
  </tbody>
</table>	