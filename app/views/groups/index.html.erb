<br>
<div><%=link_to "グループを作成する",new_group_path %></div>
<br>

<h4>知り合いのグループかも？</h4>
<% @groups.each do |group| %>
  <% if !group.users.include?(current_user) %>
    <tr>
      <td><%= link_to group.name, group_path(group), data: { confirm: 'グループに参加しますか？' } %></td>
    </tr>
	<% end %>
<% end %>

<br><br>

<h2>グループ一覧</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">グループ名</th>
      <th scope="col">メンバー数</th>
      <th scope="col">招待</th>
    </tr>
  </thead>
  <tbody>
		<% @groups.each do |group| %>
      <% if group.users.include?(current_user) %>
        <tr>
          <td><%= link_to group.name, group_path(group) %></td>
          <td><%= image_tag 'member.png',width: '7%', height: '15%' %>×<%= group.users.count %></td>
          <td><%= link_to 'このグループに招待', new_invite_path(group_id: group) %></td>
        </tr>
      <% end %>  
		<% end %>
  </tbody>
</table>	
